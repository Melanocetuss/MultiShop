@model GetByIdProductDetailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th>Ürün Açıklaması</th>
                                <th>Ürün Bilgisi</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>                            
                            <tr>
                                <td>@Model.ProductDescription</td>
                                <td>@Model.ProductInfo</td>
                                <td>
                                    <a href="/Admin/ProductDetail/UpdateProductDetail/@Model.ProductDetailID" class="btn btn-warning btn-sm"><i class="fa fa-pencil"></i> Güncelle</a>
                                </td>
                            </tr>               
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>