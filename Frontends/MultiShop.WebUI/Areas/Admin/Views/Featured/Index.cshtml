@model List<ResultFeaturedDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <a href="/Admin/Featured/CreateFeatured/" class="btn btn-light"><i class="fa fa-plus me-1"></i> Yeni Özellik</a>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 30px;">#</th>
                                <th>Özellik Başlığı</th>
                                <th>Özellik İkonu</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th class="text-center">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.Icon</td>
                                    <td>
                                        <a href="/Admin/Featured/UpdateFeatured/@item.FeaturedID" class="btn btn-warning me-2"><i class="fa fa-pencil"></i> Güncelle</a>
                                        <a href="/Admin/Featured/DeleteFeatured/@item.FeaturedID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Kaldır</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>