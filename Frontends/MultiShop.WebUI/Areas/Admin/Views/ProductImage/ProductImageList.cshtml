@model GetProductImageByProductIdDto
@{
    ViewData["Title"] = "ProductImageList";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">               
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 120px;">Görsel 1</th>
                                <th style="width: 120px;">Görsel 2</th>
                                <th style="width: 120px;">Görsel 3</th>
                                <th style="width: 120px;">Görsel 4</th>
                                <th>Ürünleri Gör</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th class="text-center"><img src="@Model.Image1" alt="@Model.Image1" style="width:100px; height:80px;" /></th>
                                <th class="text-center"><img src="@Model.Image2" alt="@Model.Image2" style="width:100px; height:80px;" /></th>
                                <th class="text-center"><img src="@Model.Image3" alt="@Model.Image3" style=" width:100px; height:80px;" /></th>
                                <th class="text-center"><img src="@Model.Image4" alt="@Model.Image4" style="width:100px; height:80px;" /></th>
                                <td>
                                    <a href="/Admin/ProductImage/Index?ProductID=@Model.ProductID" class="btn btn-info btn-sm"><i class="fa fa-info"></i> Görselere Git</a>
                                </td>
                                <td>
                                    <a href="/Admin/ProductImage/UpdateProductImage/@Model.ProductImageID" class="btn btn-warning"><i class="fa fa-pencil"></i> Güncelle</a>
                                </td>
                            </tr>
                                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>