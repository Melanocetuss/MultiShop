@model List<ResultProductImageDto>
@{
    ViewData["Title"] = "ProductImageList";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">               
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 120px;">Görsel 1</th>
                                <th style="width: 120px;">Görsel 2</th>
                                <th style="width: 120px;">Görsel 3</th>
                                <th style="width: 120px;">Görsel 4</th>
                                <th>Ürünleri Gör</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="text-center"><img src="@item.Image1" style="width:100px; height:80px;" /></th>
                                    <th class="text-center"><img src="@item.Image2" style="width:100px; height:80px;" /></th>
                                    <th class="text-center"><img src="@item.Image3" style="width:100px; height:80px;" /></th>
                                    <th class="text-center"><img src="@item.Image4" style="width:100px; height:80px;" /></th>
                                    
                                    <td>
                                        <a href="/Admin/ProductImage/Index?ProductID=@item.ProductID" class="btn btn-info btn-sm"><i class="fa fa-info"></i> Görselere Git</a>
                                    </td>
                                    <td>
                                        <a href="/Admin/ProductImage/UpdateProductImage/@item.ProductImageID" class="btn btn-warning"><i class="fa fa-pencil"></i> Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>