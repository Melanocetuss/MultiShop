@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <a href="/Admin/Product/CreateProduct/" class="btn btn-light"><i class="fa fa-plus me-1"></i> Yeni Ürün</a>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 120px;">Resim</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Açıklaması</th>
                                <th>Ürün Fiyatı</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.ProductImageUrl" style="width:100px; height:80px;" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductDescription</td>
                                    <td>@item.ProductPrice ₺</td>                                    
                                    <td>
                                        <a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-warning me-2"><i class="fa fa-pencil"></i> Güncelle</a>
                                        <a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Kaldır</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>