@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <a href="/Admin/Product/CreateProduct/" class="btn btn-light mb-3">
                    <i class="fa fa-plus me-1"></i> Yeni Ürün
                </a>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 120px;">Resim</th>
                                    <th>Ürün Adı</th>
                                    <th>Ürün Açıklaması</th> 
                                    <th>Kategorisi</th>
                                    <th>Ürün Fiyatı</th>
                                    <th>Ürün Görseleri</th>
                                    <th style="width: 240px;">İlgili İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ProductImageUrl" alt="Ürün Resmi" style="width:100px; height:80px;" />
                                        </td>
                                        <td>@item.ProductName</td>
                                        <td class="text-truncate" style="max-width: 250px;">
                                            @item.ProductDescription
                                        </td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.ProductPrice ₺</td>
                                        
                                        <td>
                                            <a href="/Admin/ProductImage/Index?ProductID=@item.ProductID" class="btn btn-info btn-sm">
                                                <i class="fa fa-info"></i> Görselere Git
                                            </a>
                                        </td>

                                        <td>
                                            <a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-warning">
                                                <i class="fa fa-pencil"></i> Güncelle
                                            </a>
                                            <a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-danger"
                                               onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                                <i class="fa fa-trash"></i> Kaldır
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>