@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <a href="/Admin/Category/CreateCategory/" class="btn btn-light"><i class="fa fa-plus me-1"></i> Yeni Kategori</a>
                <div class="card-body p-0">                    
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 120px;">Resim</th>
                                <th>Kategori Adı</th>
                                <th>Ürünleri Gör</th>
                                <th style="width: 240px;">İlgili İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th class="text-center"><img src="@item.ImageUrl" style="width:100px; height:80px;" /></th>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/Admin/Category/GetAllProductByCategoryId/@item.CategoryID" class="btn btn-info"><i class="fa fa-info"></i> Ürünleri Gör</a></td>
                                    <td>
                                        <a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-warning"><i class="fa fa-pencil"></i> Güncelle</a>
                                        <a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Kaldır</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>