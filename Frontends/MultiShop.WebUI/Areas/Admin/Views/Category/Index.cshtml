@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/AdminUILayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th style="width:150px;">Güncelle Veya Kaldır</th>
                            </tr>
                        </thead>
                        <tbody>

                        @foreach (var item in Model)
                        {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CategoryName</td>
                                    
                                    <td>
                                        <a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                                        <a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger"><i class="fa fa-times"> </i></a>
                                    </td>

                                </tr>
                        }

                        </tbody>
                    </table>
                    <br />
                    <a href="/Admin/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>