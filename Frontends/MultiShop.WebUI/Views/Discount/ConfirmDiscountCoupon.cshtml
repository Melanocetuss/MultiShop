<div class="col-lg-4">
    <!-- Confirm Discount Coupon -->
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="code" class="form-control border-0 p-4" placeholder="Kupon kodunu giriniz.">
            <div class="input-group-append">
                <button class="btn btn-primary">Kuponu Uygula</button>
            </div>
        </div>
    </form>

    <!-- Basket Summary -->
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Özeti</span></h5>
    <div class="bg-light p-30 mb-5">

        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Toplam Sepet Tutarı</h6>
                <h6>+ @ViewBag.TotalPrice</h6>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <h6 class="font-weight-medium">KDV Tutarı</h6>
                <h6 class="font-weight-medium">+ @ViewBag.Tax</h6>
            </div>

            @if (ViewBag.code != null)
            {
                <div class="d-flex justify-content-between mb-3">
                    <h6 class="font-weight-medium">İndirim Tutarı</h6>
                    <h6 class="font-weight-medium">- @ViewBag.DiscountedPrice</h6>
                </div>
            }

        </div>
        <div class="pt-2">
            @if (ViewBag.code != null)
            {
                <div class="d-flex justify-content-between mt-2">
                    <h5>Uygulanan Kupon</h5>
                    <h7>@ViewBag.Code</h7>
                </div>
            }
            
            <div class="d-flex justify-content-between mt-2">
                <h5>Toplam Fiyat</h5>
                @if(ViewBag.Code != null) 
                {
                    <h5>@ViewBag.DiscountedTotalPrice ₺</h5>
                }

                @if (ViewBag.Code == null)
                {
                    <h5>@ViewBag.PriceWithTax ₺</h5> 
                }
            </div>
                        
            <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
        </div>
    </div>
</div>