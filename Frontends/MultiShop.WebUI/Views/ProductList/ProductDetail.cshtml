
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}

<div class="container-fluid pb-5">    
    <div class="row px-xl-5">        
        <!-- Image Slider -->
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial", new { ProductID = ViewBag.ProductID })
        
        <!-- Feature Info -->
        @await Component.InvokeAsync("_FeatureInfoProductDetailComponentPartial", new { ProductID = ViewBag.ProductID })
    </div>

    <div class="row px-xl-5">
        <div class="col">
            
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Detayı</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Özelikleri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar (1)</a>
                </div>
                <div class="tab-content">
                    <!-- Description -->
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial")                   

                    <!-- Additional Information -->
                    @await Component.InvokeAsync("_AdditionalInformationProductDetailComponentPartial")                    

                    <!-- Review -->
                    @await Component.InvokeAsync("_ReviewProductDetailComponentPartial")                    
                </div>
            </div>

        </div>
    </div>
</div>